{
    "name": "cerbero/console-tasker",
    "type": "library",
    "description": "Laravel package to run and manage tasks in Artisan commands.",
    "keywords": [
        "laravel",
        "console",
        "cli"
    ],
    "homepage": "https://github.com/cerbero90/console-tasker",
    "license": "MIT",
    "authors": [{
        "name": "Andrea Marco Sartori",
        "email": "andrea.marco.sartori@gmail.com",
        "homepage": "https://github.com/cerbero90",
        "role": "Developer"
    }],
    "require": {
        "php": "^8.0",
        "cerbero/command-validator": "^2.5",
        "illuminate/console": ">=8.0",
        "illuminate/contracts": ">=8.0",
        "illuminate/support": ">=8.0",
        "nunomaduro/collision": "^6.1",
        "nunomaduro/termwind": "^1.6"
    },
    "require-dev": {
        "orchestra/testbench": ">=6.0",
        "pestphp/pest": "^1.21",
        "scrutinizer/ocular": "^1.8",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Cerbero\\ConsoleTasker\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cerbero\\ConsoleTasker\\": "tests"
        }
    },
    "scripts": {
        "test": "pest",
        "check-style": "phpcs --standard=PSR12 src",
        "fix-style": "phpcbf --standard=PSR12 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Cerbero\\ConsoleTasker\\Providers\\ConsoleTaskerServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
